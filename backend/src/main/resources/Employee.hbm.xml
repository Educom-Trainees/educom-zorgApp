<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="nu.zapp.entities.Employee" table="employee">
        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>
        <property name="username" insert="true"/>
        <property name="password" insert="true"/>
        <property name="password_expiration"/>
        <property name="first_ame" insert="true"/>
        <property name="last_name" insert="true"/>
        <property name="role" insert="true"/>
        <property name="address" insert="true"/>
        <property name="postalcode" insert="true"/>
        <property name="residence" insert="true"/>
        <property name="monday" insert="true"/>
        <property name="tuesday" insert="true"/>
        <property name="wednesday" insert="true"/>
        <property name="thursday" insert="true"/>
        <property name="friday" insert="true"/>
    </class>
</hibernate-mapping>
